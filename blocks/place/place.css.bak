.place {
	margin-top: 80px;
	display: grid;
	justify-content: center;
	grid-template-columns: 460px 484px;
	grid-template-rows: auto 460px;
	column-gap: 40px;
	row-gap: 48px;
	min-width: 320px;
}
.place:first-child {
	margin-top: 92px;
}

@media screen and (min-width:1024px) and (max-width:1279px) {
    .place {
		grid-template-columns: 440px 456px;
		grid-template-rows: auto 440px;
		column-gap: 32px;
    }
}

@media screen and (min-width:768px) and (max-width:1023px) {
    .place {
		grid-template-columns: 340px 352px;
		grid-template-rows: auto auto;
		column-gap: 28px;
    }
	.place:first-child {
		margin-top: 88px;
	}
}

@media screen and (min-width:320px) and (max-width:767px) {
    .place {
		grid-template-columns: 288px;
		grid-template-rows: 0;
		margin-top: 50px;
    }
	.place:first-child {
		margin-top: 64px;
	}
}