.header__lang-link {
	transition: opacity 0.5s;
	margin-top: 0;
	margin-bottom: 0;
}
.header__lang-link:nth-child(2) {
	margin-left: auto;
	margin-right: 18px;
}

.header__lang-link:hover {
	text-decoration-line: underline;
	cursor: pointer;
	opacity: 0.8;
}

@media screen and (min-width:320px) and (max-width:767px) {
    .header__lang-link {
		font-size: 18px;
		line-height: 20px;
    }
}