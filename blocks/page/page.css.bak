.page {
	background-color: #2A2C2F;
	color: #FFFFFF;
	font-family: 'Inter','Arial', sans-serif;
	max-width: 1280px;
	min-width: 320px;
	margin: 0 auto;
}

@media screen and (min-width:1024px) and (max-width:1279px) {
    .page {
		max-width: 1279px;
		width: calc(100% - 2*48px);
    }
} 
